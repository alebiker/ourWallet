<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:scaleType="center"
        android:background="#FFFFBB33"
        android:textSize="@dimen/dialog_title_text_size"
        android:text="Add/Edit Item"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/dialog_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:maxLines="1"
        android:textSize="@dimen/dialog_info_text_size"
        android:inputType="textPersonName"
        android:hint="Name"
        android:text="Item1"
        />

    <EditText
        android:id="@+id/dialog_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:inputType="numberDecimal"
        android:hint="Price â‚¬"
        android:textSize="@dimen/dialog_info_text_size"
        android:text="54.13"
        android:fontFamily="sans-serif"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:textSize="@dimen/dialog_info_text_size"
        android:text="@string/dialog_qty"
        android:fontFamily="sans-serif"
        />

        <NumberPicker
        android:id="@+id/dialog_item_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_gravity="center"
        />


</LinearLayout>