<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.abapp.mobile.shoppingtogether.EditShopListActivity"
     >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

<RelativeLayout
    android:id="@+id/activity_edit_id"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <include layout="@layout/edit_shop_header"
        android:id="@+id/shop_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"/>

    <include layout="@layout/shop_footer"
        android:id="@+id/shop_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <include layout="@layout/shop_table"
        android:layout_below="@id/shop_header"
        android:layout_above="@id/shop_footer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

</RelativeLayout>

</LinearLayout>